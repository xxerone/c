/*
3.P 408-409 주소록 프로그램 - 구현 및 결과 확인
*/

#include <stdio.h>
#include <string.h>

struct contacts {
    char name[20];
    char address[100];
    char tel_no[20];  
};

int main()
{
    struct contacts person;
    
    printf("이름을 입력하시오: ");
    gets_s(person.name, 20);
    
    printf("주소를 입력하시오: ");
    gets_s(person.address, 100);
    
    printf("전화번호를 입력하시오: ");
    gets_s(person.tel_no, 20);
    
    printf("이름 : %s\n", person.name);
    printf("이름 : %s\n", person.address);
    printf("이름 : %s\n", person.tel.no);
    
    return 0;
}